<launch>

  <!-- start gazebo with an empty plane -->
  <include file="$(find sr_hand)/launch/gazebo/empty_world.launch"/>

  <!-- spawn the arm model -->
  <group if="$(optenv MUSCLE 0)">
    <param name="robot_description" command="$(find xacro)/xacro.py '$(find sr_description)/robots/sr_arm_muscle.urdf.xacro'" />
  </group>
  <group unless="$(optenv MUSCLE 0)">
    <param name="robot_description" command="$(find xacro)/xacro.py '$(find sr_description)/robots/sr_arm_motor.urdf.xacro'" />
  </group>

  <node name="spawn_hand" pkg="gazebo" type="spawn_model" args="-urdf -param robot_description -z 0.01 -model shadow_model  -J ShoulderJSwing 0.78 -J ElbowJSwing 2.0" respawn="false" output="screen" />

  <!-- Controllers for the arm -->
  <include file="$(find sr_hand)/launch/gazebo/arm_controllers.launch"/>

</launch>
